<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <com.clj.ecgview.EcgHorizontalView
        android:id="@+id/ecg_view"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        app:ecghBackgroundColor="@android:color/white"
        app:ecghGridColor="@android:color/holo_red_dark"
        app:ecghLittleGridColor="@android:color/holo_purple"
        app:ecghLineColor="@android:color/black"
        app:ecghLittleGrid="true"
        app:ecghLittleGridNum="5"
        app:ecghLittleGridPxSize="12"
        app:ecghMvData="4.25"
        app:ecghStartColumn="4"
        />

</LinearLayout>